<header>

    <div id="allheader" class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="navbar-inner">
          
          <div class="container"> 
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>

            <% if (is_post()){ %>
              <a class="brand" href="#" data-toggle="modal" data-target="#myModal"><img width="124px" height="124px" alt="Hike News" src="<%= config.root %><% if (theme.avatar){ %><%- theme.avatar %><% } else {%>css/images/avatar.jpg<% } %>"></a>
            <% } else { %>
              <a class="brand"><img width="124px" height="124px" alt="Hike News" src="<%= config.root %><% if (theme.avatar){ %><%- theme.avatar %><% } else {%>css/images/avatar.jpg<% } %>"></a>
            <% } %>
            
            <div class="navbar-collapse collapse">
              <ul class="nav navbar-nav">
                <% for (var i in theme.menu){ %>
                  <li> <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a> </li>
                <% } %>
            </div>
          </div>
                
      </div>
    </div>

</header>

<% if (is_current("about", false) && theme.about_big_image){ %>
  <div style="background:#fff;width: 100%;padding-top:50px;">
    <div class="container marketing">

      <div class="row featurette">
        <img width="100%" alt="Hike News" src="<%- config.root %><%- theme.about_big_image %>">
      </div>

    </div>
  </div>
<% } %>
