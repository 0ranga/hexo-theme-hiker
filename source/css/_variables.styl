// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Colors
color-default = #555
color-grey = #999
color-border = #e7e7eb
color-link = #0e83cd
color-link-bg = #eef1f8
color-link-hover = color-theme-red
color-background = #fff
color-code-background = #f0f0f0
color-sidebar-text = #777
color-widget-background = #ddd
color-widget-border = #e7e7eb
color-footer-background = #f0f0f0
color-mobile-nav-background = #191919
color-theme-blue-twitter = #00aced
color-theme-red = #ff5537
color-theme-orange = #fb6d19
color-theme-green = #64a325
color-theme-green-light = #42b983
color-theme-black = #262a30
color-theme-purple-tsinghua = #5c307d

random(min,max)
  return floor(math(0, 'random')*(max - min + 1) + min)

num = random(0, 7)
if num == 0
  color-theme-red = color-theme-blue-twitter
if num == 2
  color-theme-red = color-theme-green-light
if num == 3
  color-theme-red = color-theme-red
if num == 4
  color-theme-red = color-theme-green
if num == 5
  color-theme-red = color-theme-orange
if num == 6
  color-theme-red = color-theme-purple-tsinghua

color-theme = color-theme-red

// Fonts
font-sans = -apple-system, "Arial", BlinkMacSystemFont,
    "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell",
    "Fira Sans", "Droid Sans", "Helvetica Neue",
    sans-serif
font-normal = "Helvetica Neue",Helvetica Neue,Helvetica,Arial,Hiragino Sans GB,Microsoft Yahei,sans-s
font-serif = Georgia, "Arial", "Times New Roman", serif
font-mono = "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace
font-apple-pingfang = 'HanHei SC', 'PingFang SC', 'Helvetica Neue', 'Helvetica', 'STHeitiSC-Light', 'Arial', sans-serif
font-icon = FontAwesome
font-icon-path = "fonts/fontawesome-webfont"
font-icon-version = "4.0.3"
font-size = 15px
line-height = 1.6em
line-height-title = 1.1em

// Header
logo-size = 40px
subtitle-size = 16px
banner-height = 300px
banner-url = "images/banner.jpg"

sidebar = hexo-config("sidebar")

// Layout
block-margin = 50px
article-padding = 20px
mobile-nav-width = 280px
main-column = 9
sidebar-column = 3

if sidebar and sidebar isnt bottom
  _sidebar-column = sidebar-column
else
  _sidebar-column = 0

// Grids
column-width = 65px
gutter-width = 20px
columns = main-column + _sidebar-column

// Media queries
mq-mobile = "screen and (max-width: 479px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 767px)"
mq-normal = "screen and (min-width: 768px)"